<?xml version="1.0" encoding="utf-8"?>
<odoo>

 
<record id="class_stages_view_list" model="ir.ui.view">
    <field name="name">class.stages.view.list</field>
    <field name="model">class.stage</field>
    <field name="arch" type="xml">
        <list string="Stages" editable="top">
                <field name="name"/>
                <field name="courses_number"/>
        </list>
    </field>
</record>

<record id="class_stages_view_form" model="ir.ui.view">
    <field name="name">class.stages.view.form</field>
    <field name="model">class.stage</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
                <group>
                    <field name="name"/>
                </group>

            </sheet>
            <notebook>
                <page name="courses" string="Courses">
                    <field name="courses" >
  <list editable="bottom">
                <field name="name"/>
          <field name="semister" />
            </list>

                    </field>
                </page>
            </notebook>
        </form>
    </field>
</record>


<record id="class_stages_action" model="ir.actions.act_window">
    <field name="name">Class</field>
    <field name="res_model">class.stage</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p>No Class Registerd</p>
    </field>
</record>
</odoo>
