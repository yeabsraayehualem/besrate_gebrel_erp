<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="class_course_view_form" model="ir.ui.view">
        <field name="name">class.course.view.form</field>
        <field name="model">class.course</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image"/>
                        <field name="pdf_book"/>
                        <field name="stage_id"/>
                        <field name="semister"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="class_course_view_list" model="ir.ui.view">
        <field name="name">class.course.view.list</field>
        <field name="model">class.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="name"/>
                <field name="image"/>
                <field name="pdf_book"/>
                <field name="stage_id"/>
            </list>
        </field>
    </record>

    <record id="class_course_action" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">class.course</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>No Class Registerd</p>
        </field>
    </record>
</odoo>
