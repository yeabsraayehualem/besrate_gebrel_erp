<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="parent_parent_view_form" model="ir.ui.view">
        <field name="name">parent.parent.view.form</field>
        <field name="model">student.parent</field>
        <field name="arch" type="xml">
            <form string="Parent">
                <sheet>
                    <!-- Header: Full Name + Photo (Odoo-native layout) -->
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" placeholder="Full Name" required="1"/>
                        </h1>
                    </div>
                    <!-- Photo on the right -->
                    <field name="photo" widget="image" class="oe_avatar float-end" 
                           options="{'zoom': true, 'preview_image': 'photo', 'size': [150, 150]}"/>
                    <!-- Main fields -->
                    <group>
                        <field name="name_of_baptism" required="1"/>
                        <field name="phone_no" required="1"/>
                        <field name="address" required="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW (Using <list> tag for Odoo 18) -->
    <record id="student_parent_view_list" model="ir.ui.view">
        <field name="name">student.parent.view.list</field>
        <field name="model">student.parent</field>
        <field name="arch" type="xml">
            <list string="Parents">
                <field name="full_name"/>
                <field name="name_of_baptism"/>
                <field name="phone_no"/>
                <field name="address" optional="hide"/>  <!-- Optional to hide long text -->
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="student_parent_action" model="ir.actions.act_window">
        <field name="name">Parents</field>
        <field name="res_model">student.parent</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first parent record!
            </p>
        </field>
    </record>

  
</odoo>